<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/login_acitivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.yiyi.zhihu.ui.login.LoginAcitivity">

    <include layout="@layout/common_toolbar" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/login_bg"
            android:orientation="vertical">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/space_45"
                android:layout_marginTop="@dimen/space_60"
                android:src="@drawable/splash_logo" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_25"
                android:gravity="center_horizontal"
                android:text="@string/login_with_weibo"
                android:textColor="@android:color/white" />

        <Button
                android:layout_width="@dimen/space_300"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/space_45"
                android:layout_marginTop="@dimen/space_20"
                android:background="@drawable/btn_selector"
                android:drawableLeft="@drawable/account_sina"
                android:paddingLeft="@dimen/space_50"
                android:paddingRight="@dimen/space_50"
                android:text="@string/sina_weibo" />

        <Button
                android:layout_width="@dimen/space_300"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_selector"
                android:drawableLeft="@drawable/account_tencent"
                android:paddingLeft="@dimen/space_50"
                android:paddingRight="@dimen/space_50"
                android:text="@string/tencent_weibo" />

        <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"></View>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_15"
                android:gravity="center_horizontal"
                android:text="@string/defination"
                android:textColor="@color/colorLoginInfo"
                android:textSize="@dimen/textSize_12" />

    </LinearLayout>

</LinearLayout>
